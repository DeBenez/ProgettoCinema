<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_colorBackground"
        tools:context=".menu_activities.AccountIntent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/infoUtente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/cardInfoAccountTitle"
                    android:textColor="@color/secondaryTextLight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvNomeCognomeUtente"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="24dp"
                    android:drawableStart="@drawable/ic_person_grey_24dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/primaryTextLight"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/tvMailUtente"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:drawablePadding="24dp"
                    android:drawableStart="@drawable/ic_email_grey_24dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/primaryTextLight"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/tvPasswordUtente"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="24dp"
                    android:drawableStart="@drawable/ic_vpn_key_grey_24dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="24dp"
                    android:text="@string/tvPsswText"
                    android:textColor="@color/primaryTextLight"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/prenotazioniUtente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/cardPrenotazioniTitle"
                    android:textColor="@color/secondaryTextLight"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/prenotazioniList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/btnShowAllBiglietti"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/btnShowAll" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
